<!DOCTYPE html>
<html lang="it" class="h-100">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profilo - SkillBridge</title>
    <%- include('partials/head') %>
    <script src="/js/navbar.js" defer></script>
</head>

<body class="d-flex flex-column h-100 has-navbar-padding">

    <%- include('partials/navbar') %>
    <%- include('partials/modal') %>

    <!-- Main content -->
    <main class="flex-shrink-0">
        <div class="container py-4 py-md-5">
            <!-- Header del profilo -->
            <div class="card shadow-sm mb-4">
                <div class="card-body p-3 p-md-4">
                    <div class="row g-4">                        <div class="col-md-4">
                            <div class="profile-image-container text-center text-md-start">                                <div class="position-relative mb-3">
                                    <% if (isOwnProfile) { %>
                                        <!-- Contenitore con effetto hover per la foto profilo -->
                                        <div class="profile-pic-container">
                                            <img src="<%= user.profilePicture.startsWith('/') ? user.profilePicture : '/' + user.profilePicture %>" alt="Foto Profilo" class="rounded-circle profile-image">
                                            <div class="profile-pic-overlay" data-bs-toggle="modal" data-bs-target="#profilePictureModal">
                                                <i class="bi bi-pencil-fill"></i>
                                            </div>
                                        </div>
                                    <% } else { %>
                                        <img src="<%= user.profilePicture.startsWith('/') ? user.profilePicture : '/' + user.profilePicture %>" alt="Foto Profilo" class="rounded-circle profile-image">
                                    <% } %>
                                </div>
                                <div>
                                    <% if (user.type === 'freelancer') { %>
                                        <span class="badge bg-primary mb-2">Freelancer</span>
                                        <h1 class="h3 mb-2 fw-bold"><%= user.firstName %> <%= user.lastName %></h1>
                                        <p class="text-muted mb-2">@<%= user.username %></p>
                                    <% } else if (user.type === 'business') { %>
                                        <h1 class="h3 mb-2 fw-bold"><%= user.businessName %></h1>
                                        <p class="text-muted mb-2">@<%= user.username %></p>
                                        <span class="badge bg-secondary">Azienda</span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="profile-section">
                                <h4 class="fw-bold mb-3">Informazioni</h4>
                                <p class="mb-0"><%= user.bio || 'Nessuna bio inserita' %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row g-4">
                <div class="col-lg-8">
                    <!-- Competenze Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body p-3 p-md-4">
                            <h4 class="mb-3 fw-bold">Competenze</h4>
                            <div class="d-flex flex-wrap gap-2">
                                <span class="badge rounded-pill bg-primary">HTML5</span>
                                <span class="badge rounded-pill bg-primary">CSS3</span>
                                <span class="badge rounded-pill bg-primary">JavaScript</span>
                                <span class="badge rounded-pill bg-primary">TypeScript</span>
                                <span class="badge rounded-pill bg-primary">React</span>
                                <span class="badge rounded-pill bg-primary">Node.js</span>
                                <span class="badge rounded-pill bg-primary">Express.js</span>
                                <span class="badge rounded-pill bg-primary">Git</span>
                                <span class="badge rounded-pill bg-primary">Bootstrap</span>
                                <span class="badge rounded-pill bg-primary">Responsive Design</span>
                            </div>
                        </div>
                    </div>
                    <!-- Annunci Pubblicati Card -->
                    <div class="card shadow-sm">
                        <div class="card-body p-3 p-md-4">
                            <h4 class="mb-3 fw-bold">Annunci Pubblicati</h4>
                            <% if (userPosts && userPosts.length > 0) { %>
                                <div class="post-list">
                                    <% userPosts.forEach(post => { %>
                                        <!-- Annuncio -->
                                        <div class="card mb-3">
                                            <div class="card-body p-3">
                                                <h5 class="card-title mb-2 fw-bold"><%= post.title %></h5>
                                                <p class="card-text mb-2">
                                                    <small class="text-muted">
                                                        Pubblicato il: <%= new Date(post.createdAt).toLocaleDateString('it-IT') %>
                                                    </small>
                                                </p>
                                                <p class="card-text mb-0"><%= post.content %></p>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="alert alert-secondary mb-0">
                                    Nessun annuncio pubblicato.
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <!-- Card Contatti -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body p-3 p-md-4">
                            <h4 class="mb-3 fw-bold">Contatti</h4>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item px-0 py-2 border-0">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-envelope text-primary me-2 fs-5"></i>
                                        <div>
                                            <a href="mailto:<%= user.email %>" class="contact-link"><%= user.email %></a>
                                        </div>
                                    </div>
                                </li>
                                <% if (user.website) { %>
                                <li class="list-group-item px-0 py-2 border-0">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-globe text-primary me-2 fs-5"></i>
                                        <div>
                                            <a href="<%= user.website %>" class="contact-link" target="_blank"><%= user.website %></a>
                                        </div>
                                    </div>
                                </li>
                                <% } %>
                                <% if (user.phone) { %>
                                <li class="list-group-item px-0 py-2 border-0">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-telephone text-primary me-2 fs-5"></i>
                                        <div>
                                            <a href="tel:<%= user.phone %>" class="contact-link"><%= user.phone %></a>
                                        </div>
                                    </div>
                                </li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>    <%- include('partials/footer') %>    <% if (isOwnProfile) { %>
    <!-- Modal per gestione foto profilo -->
    <div class="modal fade" id="profilePictureModal" tabindex="-1" aria-labelledby="profilePictureModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="profilePictureModalLabel">Gestisci foto profilo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Opzioni per la foto profilo -->
                    <div class="d-flex flex-column">
                        <!-- Upload nuova foto -->
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Carica nuova foto</h6>
                            <form action="/profile/upload-photo" method="POST" enctype="multipart/form-data" id="uploadPhotoForm">
                                <div class="mb-3">
                                    <input class="form-control" type="file" id="profilePicture" name="profilePicture" accept="image/*" required>
                                    <div class="form-text">
                                        L'immagine deve essere in formato JPG, PNG o GIF e non più grande di 5MB.
                                    </div>
                                </div>
                                <div id="imagePreview" class="text-center mt-3" style="display: none;">
                                    <img src="" alt="Anteprima" class="img-fluid rounded-circle" style="max-width: 200px; max-height: 200px;">
                                </div>
                                <button type="submit" class="btn btn-primary mt-2">
                                    <i class="bi bi-upload"></i> Carica foto
                                </button>
                            </form>
                        </div>
                        
                        <!-- Elimina foto attuale -->
                        <% if (user.profilePicture !== 'img/profile.png') { %>
                        <div>
                            <h6 class="fw-bold mb-3">Elimina foto attuale</h6>
                            <form action="/profile/remove-photo" method="POST">
                                <p class="text-muted">La foto attuale verrà rimossa e sostituita con l'immagine predefinita.</p>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Elimina foto
                                </button>
                            </form>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Script per l'anteprima dell'immagine -->
    <script>
        document.getElementById('profilePicture').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                const imagePreview = document.getElementById('imagePreview');
                const previewImage = imagePreview.querySelector('img');
                
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    imagePreview.style.display = 'block';
                }
                
                reader.readAsDataURL(file);
            }
        });
    </script>
    <% } %>
</body>
</html>