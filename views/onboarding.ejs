<!DOCTYPE html>
<html lang="it" class="h-100">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Onboarding - SkillBridge</title>
    <%- include('partials/head') %>
    <script src="/js/onboarding.js" defer></script>
</head>

<body class="auth-gradient-bg">

    <!-- Main content -->
    <div class="container min-vh-100 d-flex align-items-center justify-content-center py-5">
        <div class="card shadow-sm form-container">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h1 class="card-title fw-bold">Benvenuto!</h1>
                    <form action="/onboarding/skip" method="POST">
                        <button type="submit" class="btn btn-link text-muted d-flex align-items-center skip-link">
                            <span>Salta</span>
                            <i class='bi bi-arrow-right'></i>
                        </button>
                    </form>
                </div>
                <p class="text-muted text-start mb-4">Ancora pochi passi per completare il tuo profilo</p>
                <% if (error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger">
                        <%= error_msg %>
                    </div>
                <% } %>
                <div class="row g-3 mb-4">
                    <div class="col-6">
                        <div class="card h-100 option selected" onclick="selectRole('freelancer')" role="button">
                            <div class="card-body text-center py-4">
                                <i class='bi bi-person fs-1 mb-2'></i>
                                <div class="fw-bold">Freelancer</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card h-100 option" onclick="selectRole('business')" role="button">
                            <div class="card-body text-center py-4">
                                <i class='bi bi-buildings fs-1 mb-2'></i>
                                <div class="fw-bold">Azienda</div>
                            </div>
                        </div>
                    </div>
                </div>
                <form id="onboarding-form" action="/onboarding" method="POST">
                    <input type="hidden" name="type" id="selected-type" value="freelancer">
                    <div id="freelancer-fields">
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input type="text" class="form-control" name="firstName" placeholder="Nome" required autocomplete="name">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input type="text" class="form-control" name="lastName" placeholder="Cognome" required autocomplete="family-name">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="bi bi-globe"></i></span>
                            <input type="url" class="form-control" name="website" placeholder="Sito Web o Portfolio">
                        </div>
                    </div>
                    <div id="business-fields" style="display: none;">
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="bi bi-tag"></i></span>
                            <input type="text" class="form-control" name="businessName" placeholder="Nome Azienda" required>
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="bi bi-globe""></i></span>
                            <input type="url" class="form-control" name="website" placeholder="Sito Web Aziendale">
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Completa registrazione</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

        <!-- Attiva i tooltip di Bootstrap -->
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                tooltipTriggerList.map(function (tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl);
                });
            });
        </script>
    
</body>
</html>