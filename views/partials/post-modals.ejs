<!-- Modal per la creazione di un'offerta di lavoro (solo per aziende) -->
<div class="modal" id="create-job-offer-modal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Pubblica un'offerta di lavoro</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/posts/job-offer" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="job-title" class="form-label">Titolo dell'offerta</label>
            <input type="text" class="form-control" id="job-title" name="title" required placeholder="Sviluppatore front-end per progetto e-commerce">
          </div>
          <div class="mb-3">
            <label for="job-category" class="form-label">Categoria</label>
            <select class="form-select" id="job-category" name="category" required>
              <option value="" selected disabled>Seleziona una categoria</option>
              <option value="Sviluppo Web">Sviluppo Web</option>
              <option value="Sviluppo Mobile">Sviluppo Mobile</option>
              <option value="Design">Design</option>
              <option value="Marketing">Marketing</option>
              <option value="Copywriting">Copywriting</option>
              <option value="Traduzione">Traduzione</option>
              <option value="Altro">Altro</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="job-content" class="form-label">Descrizione</label>
            <textarea class="form-control" id="job-content" name="content" rows="6" required placeholder="Descrivi il lavoro, requisiti, compenso e come candidarsi..."></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Annulla</button>
          <button type="submit" class="btn btn-primary">Pubblica offerta</button>
        </div>
      </form>
    </div>
  </div>
</div>

